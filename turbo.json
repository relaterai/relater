{
  "$schema": "https://turbo.build/schema.json",
  "globalDependencies": ["**/.env.*local"],
  "envMode": "loose",
  "tasks": {
    "build": {
      "dependsOn": ["^build", "test"],
      "outputs": [".next/**", "!.next/cache/**"],
      "env": [
        "AUTH_SECRET",
        "DATABASE_URL",
        "DATABASE_DIRECT_URL",
        "STRIPE_SECRET_KEY",
        "EMAIL_FROM",
        "RESEND_TOKEN",
        "SENTRY_AUTH_TOKEN",
        "SENTRY_ORG",
        "SENTRY_PROJECT",
        "STRIPE_WEBHOOK_SECRET",
        "AI_PROVIDER",
        "STORAGE_ACCESS_KEY_ID",
        "STORAGE_SECRET_ACCESS_KEY",
        "STORAGE_UPLOAD_BUCKET",
        "STORAGE_ENDPOINT",
        "STORAGE_REGION",
        "GOOGLE_API_KEY",
        "EMAIL_PROVIDER",
        "AWS_SES_REGION",
        "AWS_ACCESS_KEY_ID",
        "AWS_SECRET_ACCESS_KEY"
      ]
    },
    "db:generate": {
      "cache": false
    },
    "test": {
      "dependsOn": ["^test"]
    },
    "lint": {
      "dependsOn": ["^lint"]
    },
    "analyze": {
      "dependsOn": ["^analyze"]
    },
    "dev": {
      "dependsOn": ["^build", "db:generate"],
      "cache": false,
      "persistent": true
    }
  }
}
